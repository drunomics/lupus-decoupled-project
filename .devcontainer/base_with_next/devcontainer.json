{
  "image": "mcr.microsoft.com/devcontainers/universal:2",
  "features": {
    "ghcr.io/ddev/ddev/install-ddev:latest": {}
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "felixfbecker.php-debug",
        "wongjn.php-sniffer",
        "neilbrayfield.php-docblocker",
        "bmewburn.vscode-intelephense-client",
        "andrewdavidblum.drupal-smart-snippets",
        "mblode.twig-language-2",
        "timonwong.shellcheck",
        "rogalmic.bash-debug",
        "dbaeumer.vscode-eslint",
        "bradlc.vscode-tailwindcss",
        "esbenp.prettier-vscode"
      ]
    }
  },
  "portsAttributes": {
    "8080": {
      "label": "Backend",
      "onAutoForward": "openPreview"
    },
    "3000": {
      "label": "Frontend"
    },
    "3306": {
      "label": "Database"
    },
    "9003": {
      "label": "Xdebug"
    }
  },
  "waitFor": "postCreateCommand",
  "postCreateCommand": "LD_PROJECT_TYPE=base FRONTEND_REPOSITORY=https://github.com/drunomics/lupus-decoupled-nextjs-example .devcontainer/init_project.sh",
  "postAttachCommand": {
    "ddev": ".devcontainer/start_project.sh",
    "logs": "ddev exec pm2 logs"
  }
}
