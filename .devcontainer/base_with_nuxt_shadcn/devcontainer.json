{
  "image": "mcr.microsoft.com/devcontainers/universal:2",
  "features": {
    "ghcr.io/ddev/ddev/install-ddev:latest": {}
  },
  "secrets": {
    "FRONTEND_REPOSITORY": {
      "description": "Git repository of the front-end to use. (Default: https://github.com/drunomics/lupus-decoupled-nuxt3-demo-shadcn)"
    },
    "FRONTEND_BRANCH": {
      "descripton": "The branch of the front-end repository to use. (Default: main)"
    },
    "ADDITIONAL_COMPOSER_PACKAGES": {
      "description": "Coma seperated list of the Drupal or PHP packages to require with composer. (Default: none)"
    },
    "RECIPES": {
      "description": "Drupal recipes to apply. (Default: ../recipes/lupus_decoupled_recipe)"
    }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "felixfbecker.php-debug",
        "wongjn.php-sniffer",
        "neilbrayfield.php-docblocker",
        "bmewburn.vscode-intelephense-client",
        "andrewdavidblum.drupal-smart-snippets",
        "mblode.twig-language-2",
        "timonwong.shellcheck",
        "rogalmic.bash-debug"
      ]
    }
  },
  "portsAttributes": {
    "8080": {
      "label": "Backend",
      "onAutoForward": "openPreview"
    },
    "3000": {
      "label": "Frontend"
    },
    "3306": {
      "label": "Database"
    },
    "9003": {
      "label": "Xdebug"
    }
  },
  "postStartCommand": "LD_PROJECT_TYPE=base FRONTEND_REPOSITORY=https://github.com/drunomics/lupus-decoupled-nuxt3-demo-shadcn .devcontainer/init_project.sh"
}
