{
  "image": "mcr.microsoft.com/devcontainers/universal:2",
  "features": {
    "ghcr.io/ddev/ddev/install-ddev:latest": {}
  },
  "secrets": {
    "FRONTEND_REPOSITORY": {
      "description": "Git repository of the front-end to use."
    },
    "FRONTEND_BRANCH": {
      "descripton": "The branch of the front-end repository to use."
    },
    "ADDITIONAL_COMPOSER_PACKAGES": {
      "description": "Coma seperated list of the Drupal or PHP packages to require with composer."
    },
    "RECIPES": {
      "description": "Drupal recipes to apply."
    }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "felixfbecker.php-debug",
        "wongjn.php-sniffer",
        "neilbrayfield.php-docblocker",
        "bmewburn.vscode-intelephense-client",
        "andrewdavidblum.drupal-smart-snippets",
        "mblode.twig-language-2",
        "timonwong.shellcheck",
        "rogalmic.bash-debug"
      ]
    }
  },
  "portsAttributes": {
    "8080": {
      "label": "Backend",
      "onAutoForward": "openPreview"
    },
    "3000": {
      "label": "Frontend"
    },
    "3306": {
      "label": "Database"
    },
    "8027": {
      "label": "Mailhog"
    },
    "9003": {
      "label": "Xdebug"
    }
  },
  "postStartCommand": "LD_PROJECT_TYPE=demo .devcontainer/init_project.sh"
}
