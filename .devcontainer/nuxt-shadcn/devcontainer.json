{
  "name": "Nuxt shadcn",
  "image": "mcr.microsoft.com/devcontainers/base:debian-12",
  "features": {
    "ghcr.io/devcontainers/features/docker-in-docker:2": {},
    "ghcr.io/ddev/ddev/install-ddev:latest": {}
  },
  "containerEnv": {
    "FRONTEND_REPOSITORY": "https://github.com/drunomics/lupus-decoupled-nuxt-shadcn",
    "DDEV_NO_INSTRUMENTATION": "true"
  },
  "secrets": {
    "FRONTEND_BRANCH": {
      "description": "Optional: Override the default frontend branch"
    }
  },
  "remoteEnv": {
    "CODESPACE_NAME": "${localEnv:CODESPACE_NAME}"
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "felixfbecker.php-debug",
        "wongjn.php-sniffer",
        "neilbrayfield.php-docblocker",
        "bmewburn.vscode-intelephense-client",
        "andrewdavidblum.drupal-smart-snippets",
        "mblode.twig-language-2",
        "timonwong.shellcheck",
        "rogalmic.bash-debug",
        "Vue.volar",
        "dbaeumer.vscode-eslint",
        "bradlc.vscode-tailwindcss",
        "esbenp.prettier-vscode"
      ],
      "settings": {
        "terminal.integrated.defaultProfile.linux": "bash"
      }
    }
  },
  "forwardPorts": [80, 443, 3000],
  "portsAttributes": {
    "80": {
      "label": "Backend (HTTP)",
      "protocol": "http"
    },
    "443": {
      "label": "Backend (HTTPS)",
      "protocol": "https"
    },
    "3000": {
      "label": "Frontend"
    },
    "3306": {
      "label": "Database"
    },
    "9003": {
      "label": "Xdebug"
    }
  },
  "otherPortsAttributes": {
    "onAutoForward": "ignore"
  },
  "waitFor": "postCreateCommand",
  "onCreateCommand": ".devcontainer/prebuild.sh",
  "postCreateCommand": ".devcontainer/init-project.sh",
  "postStartCommand": "ddev start"
}
