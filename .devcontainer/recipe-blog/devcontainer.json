{
  "name": "Recipe: Blog",
  "image": "mcr.microsoft.com/devcontainers/universal:2",
  "features": {
    "ghcr.io/ddev/ddev/install-ddev:latest": {}
  },
  "containerEnv": {
    "FRONTEND_REPOSITORY": "https://github.com/drunomics/lupus-decoupled-nuxt-shadcn",
    "ADDITIONAL_COMPOSER_PACKAGES": "drupal/lupus_decoupled_blog",
    "RECIPES": "../recipes/lupus_decoupled_blog"
  },
  "secrets": {
    "FRONTEND_BRANCH": {
      "description": "Optional: Override the default frontend branch"
    }
  },
  "remoteEnv": {
    "NUXT_PUBLIC_DRUPAL_CE_DRUPAL_BASE_URL": "https://${localEnv:CODESPACE_NAME}-80.app.github.dev",
    "NUXT_PUBLIC_DRUPAL_CE_SERVER_DRUPAL_BASE_URL": "https://${localEnv:CODESPACE_NAME}-80.app.github.dev",
    "NEXT_PUBLIC_DRUPAL_BASE_URL": "https://${localEnv:CODESPACE_NAME}-80.app.github.dev"
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "felixfbecker.php-debug",
        "wongjn.php-sniffer",
        "neilbrayfield.php-docblocker",
        "bmewburn.vscode-intelephense-client",
        "andrewdavidblum.drupal-smart-snippets",
        "mblode.twig-language-2",
        "timonwong.shellcheck",
        "rogalmic.bash-debug",
        "Vue.volar",
        "dbaeumer.vscode-eslint",
        "bradlc.vscode-tailwindcss",
        "esbenp.prettier-vscode"
      ]
    }
  },
  "portsAttributes": {
    "8080": {
      "label": "Backend",
      "onAutoForward": "openPreview"
    },
    "3000": {
      "label": "Frontend"
    },
    "3306": {
      "label": "Database"
    },
    "9003": {
      "label": "Xdebug"
    }
  },
  "waitFor": "postCreateCommand",
  "onCreateCommand": ".devcontainer/prebuild.sh",
  "postCreateCommand": ".devcontainer/init-project.sh",
  "postAttachCommand": {
    "ddev": ".devcontainer/start-project.sh",
    "logs": "ddev exec pm2 logs"
  }
}
