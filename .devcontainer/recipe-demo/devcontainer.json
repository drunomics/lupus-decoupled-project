{
  "name": "Recipe: Demo",
  "image": "mcr.microsoft.com/devcontainers/base:debian-12",
  "hostRequirements": {
    "cpus": 2
  },
  "features": {
    "ghcr.io/devcontainers/features/docker-in-docker:2": {},
    "ghcr.io/devcontainers/features/github-cli:1": {},
    "ghcr.io/ddev/ddev/install-ddev:latest": {}
  },
  "containerEnv": {
    "FRONTEND_REPOSITORY": "https://github.com/drunomics/lupus-decoupled-nuxt-shadcn",
    "ADDITIONAL_COMPOSER_PACKAGES": "drupal/drupal_cms_starter",
    "RECIPES": "../recipes/drupal_cms_starter,../recipes/lupus_decoupled_recipe",
    "DDEV_NO_INSTRUMENTATION": "true"
  },
  "secrets": {
    "FRONTEND_BRANCH": {
      "description": "Optional: Override the default frontend branch"
    }
  },
  "remoteEnv": {
    "CODESPACE_NAME": "${localEnv:CODESPACE_NAME}"
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "felixfbecker.php-debug",
        "wongjn.php-sniffer",
        "neilbrayfield.php-docblocker",
        "bmewburn.vscode-intelephense-client",
        "andrewdavidblum.drupal-smart-snippets",
        "mblode.twig-language-2",
        "timonwong.shellcheck",
        "rogalmic.bash-debug",
        "Vue.volar",
        "dbaeumer.vscode-eslint",
        "bradlc.vscode-tailwindcss",
        "esbenp.prettier-vscode"
      ],
      "settings": {
        "terminal.integrated.defaultProfile.linux": "bash"
      }
    }
  },
  "forwardPorts": [3000, 8080],
  "portsAttributes": {
    "3000": {
      "label": "Frontend"
    },
    "8080": {
      "label": "Backend",
      "protocol": "http"
    }
  },
  "otherPortsAttributes": {
    "onAutoForward": "ignore"
  },
  "waitFor": "postStartCommand",
  "onCreateCommand": ".devcontainer/prebuild.sh",
  "postCreateCommand": ".devcontainer/init-project.sh",
  "postStartCommand": ".devcontainer/post-start.sh",
  "postAttachCommand": ".devcontainer/show-info.sh"
}
